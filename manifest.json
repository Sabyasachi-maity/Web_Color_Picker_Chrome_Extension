{
    "name": "Color Harvester",
    "description": "A web color picker extension",
    "version": "0.1.0",
    "manifest_version": 3,
    "author": "Sabyasachi Maity",

    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],

    "options_page": "sample.html",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/icon_16.png",
        "32": "/images/icon_32.png",
        "64": "/images/icon_64.png"
    }
}